{
  "crons": [
    {
      "path": "/api/v1/internal/cron-refresh",
      "schedule": "*/5 * * * *"
    }
  ],
  "buildCommand": "pip install -r requirements.txt",
  "devCommand": "uvicorn src.api.main:app --host 0.0.0.0 --port 8000",
  "installCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "functions": {
    "src/api/**/*.py": {
      "runtime": "python@3.11"
    }
  },
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/src/api/main.py"
    },
    {
      "source": "/",
      "destination": "/src/api/main.py"
    }
  ]
}
